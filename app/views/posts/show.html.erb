<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
</hr>

<table>
  <tr>
    <td><strong>Contents</strong></td>
    <td><%= @post.contents %></td>
  </tr>


  <tr>
    <td><strong>ImagePath</strong></td>
    <td><img src="<%= @post.image_path%>" width="100%"/></td>
  </tr>
  
  <tr>
    <td><strong>Thumb Fill</strong></td>
    <td><img src="<%= @post.image_path.thumb_fill%>"/></td>
  </tr>

  <tr>
    <td><strong>Thumb Fit</strong></td>
    <td><img src="<%= @post.image_path.thumb_fit%>"/></td>
  </tr>
</table>
<%= link_to '수정', edit_post_path(@post) ,class: 'btn btn-warning text-white'%> 
<%= link_to '목록', cafe_path(@post.daum),class: 'btn btn-info'%>
<%= link_to '삭제', post_path(@post),method: 'delete',class: 'btn btn-danger',data:{confirm:"삭제하시겠습니까?"}%>
<hr/>
<br><br>
<!--댓글 리스트-->

 <br>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  
  <tbody>
    <% @post.comments.each do |comment|%>
      <tr>
        <th scope="row"><%= comment.id %></th>
        <td><%= comment.content%></td>
        <td><%=link_to "삭제","/comments/#{comment.id}",method:"delete"%></td>
      </tr>
    <% end %>
  </tbody>
</table>



<!--댓글 입력-->
<%= render 'comments/form' ,post: @post%>